<article class="new-post-form">
    <div class="title">
        <a href="{{post.blog_text}}" target="_blank">{{post._blog_title}}</a>
        <span>({{post.blog_text}})</span>
    </div>
    <div class="meta">
        {{post.blog_title}} by {{post.user.username}} on {{post.created_at}}
        |
        <a href="/post/{{post.id}}"></a>
    </div>
</article>

<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>

    <div>
        <button type="submit">add blog</button>
        <button type="button" class="upvote-btn">upvote</button>
    </div>
</form>

<div class="comments">
    {{#each post.comments}}
    <section class="comment">
        <div class="meta">
            {{user.username}} on {{created_at}}
        </div>
        <div class="text">
            {{comment_text}}
        </div>
    </section>
    {{/each}}
</div>

<script src="/javascript/login.js"></script>
<script src="/javascript/add-post.js"></script>
<script src="/javascript/logout.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/edit-post.js"></script>