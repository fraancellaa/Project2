<ol class="post-list">
    <li>
        <article class="post">
            <div class="title">
                <a href="{{post_url}}" target="_blank">{{title}}</a>
                <span>({{post_url}})</span>
            </div>
            <div class="meta">
                by {{user.username}} on
                {{created_at}}
                |
            <a href="/post/{{id}}"></a>
            </div>
        </article>
    </li>
</ol>